<UserControl
    x:Class="aEMR.Appointment.Views.AppointmentTopMenuView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Resources="clr-namespace:eHCMSLanguage;assembly=aEMRLanguage"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <UserControl.Resources>
        <Resources:eHCMSResources x:Key="eHCMSResources" />
        <BooleanToVisibilityConverter x:Key="BooleanToVisibility" />
    </UserControl.Resources>
    <Grid>
        <Menu
            x:Name="AppointmentTopMenu"
            Height="35"
            Margin="1,1,1,1"
            VerticalAlignment="Top"
            BorderBrush="DarkGreen"
            BorderThickness="2">
            <MenuItem
                Width="Auto"
                Height="32"
                Background="Aquamarine"
                FontWeight="ExtraBold"
                Foreground="DarkBlue"
                Header="{Binding Q0469_G1_QuanLyHenBenh, Source={StaticResource eHCMSResources}}">
                <MenuItem
                    x:Name="AppointmentManagementCmd"
                    Background="Aquamarine"
                    Foreground="DarkBlue"
                    Header="{Binding Q0469_G1_QuanLyHenBenh, Source={StaticResource eHCMSResources}}" />
                <MenuItem
                    x:Name="AppointmentListingCmd"
                    Background="Aquamarine"
                    Foreground="DarkBlue"
                    Header="{Binding K2930_G1_DSBNHBenh, Source={StaticResource eHCMSResources}}" />
                <MenuItem
                    x:Name="AppointmentTotalCmd"
                    Background="Aquamarine"
                    Foreground="DarkBlue"
                    Header="{Binding G0455_G1_TKeHBenhDDuong, Source={StaticResource eHCMSResources}}" />
                <MenuItem
                    x:Name="AppointmentDetailCmd"
                    Background="Aquamarine"
                    Foreground="DarkBlue"
                    Header="{Binding K1845_G1_CTietDVHen, Source={StaticResource eHCMSResources}}" />
                <MenuItem
                    x:Name="AppointmentFromDiagCmd"
                    Background="Aquamarine"
                    Foreground="DarkBlue"
                    Header="{Binding T1463_G1_HBenhTuDSKham, Source={StaticResource eHCMSResources}}" />
                <MenuItem
                    x:Name="PCLExamTargetCmd"
                    Background="Aquamarine"
                    Foreground="DarkBlue"
                    Header="{Binding K1552_G1_CLSSo, Source={StaticResource eHCMSResources}}" />
                <MenuItem
                    x:Name="AppointmentCollectionCmd"
                    Background="Aquamarine"
                    Foreground="DarkBlue"
                    Header="{Binding Z2899_G1_DSHenBenh2, Source={StaticResource eHCMSResources}}" />
                <MenuItem
                    x:Name="BCBNTaiKhamBenhManTinhCmd"
                    Background="Aquamarine"
                    Foreground="DarkBlue"
                    Header="{Binding Z3009_G1_BCBNTaiKhamBenhManTinh, Source={StaticResource eHCMSResources}}" />
                <MenuItem
                    x:Name="BCBenhNhanKhamBenhCmd"
                    Background="Aquamarine"
                    Foreground="DarkBlue"
                    Header="{Binding Z3115_G1_BC_BenhNhanKhamBenh, Source={StaticResource eHCMSResources}}" />
                <MenuItem
                    x:Name="BCBNHenTaiKhamBenhDacTrungCmd"
                    Background="Aquamarine"
                    Foreground="DarkBlue"
                    Header="{Binding Z3116_G1_BC_BNHenTaiKhamBenhDacTrung, Source={StaticResource eHCMSResources}}" />
                <MenuItem
                    x:Name="BCPhatHanhTheKCBCmd"
                    Background="Aquamarine"
                    Foreground="DarkBlue"
                    Header="Báo cáo Phát hành thẻ Khám chữa bệnh" />
                <MenuItem
                    x:Name="BCThongKeSoLuongTheCmd"
                    Background="Aquamarine"
                    Foreground="DarkBlue"
                    Header="BÁO CÁO THỐNG KÊ SỐ LƯỢNG THẺ KHÁM CHỮA BỆNH" />
            </MenuItem>
            <MenuItem
                Width="Auto"
                Height="32"
                Background="Aquamarine"
                FontWeight="ExtraBold"
                Foreground="DarkBlue"
                Header="{Binding Z2670_G1_KhamSucKhoe, Source={StaticResource eHCMSResources}}">
                <MenuItem
                    x:Name="HospitalClientCmd"
                    Background="Aquamarine"
                    Foreground="DarkBlue"
                    Header="{Binding Z2790_G1_KhachHangKhamSK, Source={StaticResource eHCMSResources}}" />
                <MenuItem
                    x:Name="HealthExaminationRecordCmd"
                    Background="Aquamarine"
                    Foreground="DarkBlue"
                    Header="{Binding Z2670_G1_HopDongKhamSucKhoe, Source={StaticResource eHCMSResources}}" />
                <MenuItem
                    x:Name="PaymentHealthExaminationRecordCmd"
                    Background="Aquamarine"
                    Foreground="DarkBlue"
                    Header="{Binding Z2787_G1_ThanhToanHopDong, Source={StaticResource eHCMSResources}}" />
            </MenuItem>
            <MenuItem
                Width="Auto"
                Height="32"
                Background="Aquamarine"
                FontWeight="ExtraBold"
                Foreground="DarkBlue"
                Header="Hẹn xét nghiệm">
                <MenuItem
                    x:Name="AppointmentLabListingCmd"
                    Background="Aquamarine"
                    Foreground="DarkBlue"
                    Header="{Binding K2989_G1_DSHen, Source={StaticResource eHCMSResources}}" />
                <MenuItem
                    x:Name="ReportAppointmentLabCmd"
                    Background="Aquamarine"
                    Foreground="DarkBlue"
                    Header="{Binding K1052_G1_BCTKe, Source={StaticResource eHCMSResources}}" />
            </MenuItem>
        </Menu>
    </Grid>
</UserControl>
