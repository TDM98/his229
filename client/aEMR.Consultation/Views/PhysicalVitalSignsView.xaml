                                            Style="{StaticResource TextBlock.Heading.04}"
                                            Text="{Binding A1097_G1_LanTrenPhut, StringFormat='{} {0}', Source={StaticResource eHCMSResources}}"
                                            TextWrapping="Wrap" />
