                                    FontWeight="Bold"
                                    Foreground="Blue"
                                    Text="{Binding T1722_G1_HutThuoc, StringFormat='{}- {0}: ', Source={StaticResource eHCMSResources}}" />
                                <TextBlock
                                    Width="auto"
                                    MaxHeight="40"
                                    FontWeight="Bold"
                                    Foreground="Red"
                                    ScrollViewer.VerticalScrollBarVisibility="Auto"
                                    Text="{Binding SmokingDescr, Mode=OneWay}" />
                            </StackPanel>
                            <StackPanel
                                Grid.Row="2"
                                Orientation="Horizontal"
                                Visibility="{Binding Drinking, Converter={StaticResource BooleanToVisibility}}">
                                <TextBlock
                                    Width="Auto"
                                    FontWeight="Bold"
                                    Foreground="Blue"
                                    Text="{Binding G2104_G1_UongRuou, StringFormat='{}- {0}: ', Source={StaticResource eHCMSResources}}" />
                                <TextBlock
                                    Width="auto"
                                    MaxHeight="40"
                                    FontWeight="Bold"
                                    Foreground="Red"
                                    ScrollViewer.VerticalScrollBarVisibility="Auto"
                                    Text="{Binding DrinkingDescr, Mode=OneWay}" />
                            </StackPanel>
                            <StackPanel
