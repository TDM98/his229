                                    Width="auto"
                                    MaxHeight="40"
                                    FontWeight="Bold"
                                    Foreground="Red"
                                    ScrollViewer.VerticalScrollBarVisibility="Auto"
                                    Text="{Binding DyslipidemiaDescr, Mode=OneWay}" />
                            </StackPanel>
                            <StackPanel
                                Grid.Row="5"
                                Orientation="Horizontal"
                                Visibility="{Binding Obesity, Converter={StaticResource BooleanToVisibility}}">
                                <TextBlock
                                    Width="Auto"
                                    FontWeight="Bold"
                                    Foreground="Blue"
                                    Text="{Binding A0008_G1_BeoPhi, Source={StaticResource eHCMSResources}}" />
                                <TextBlock
                                    Width="auto"
                                    MaxHeight="40"
                                    FontWeight="Bold"
                                    Foreground="Red"
                                    ScrollViewer.VerticalScrollBarVisibility="Auto"
                                    Text="{Binding ObesityDescr, Mode=OneWay}" />
                            </StackPanel>
                            <StackPanel
                                Grid.Row="6"
                                Orientation="Horizontal"
                                Visibility="{Binding Hypertension, Converter={StaticResource BooleanToVisibility}}">
                                <TextBlock
                                    Width="Auto"
                                    FontWeight="Bold"
                                    Foreground="Blue"
                                    Text="{Binding T0778_G1_TangHuyetAp, StringFormat='{}- {0}: ', Source={StaticResource eHCMSResources}}" />
                                <TextBlock
                                    Width="auto"
                                    MaxHeight="40"
                                    FontWeight="Bold"
                                    Foreground="Red"
                                    ScrollViewer.VerticalScrollBarVisibility="Auto"
                                    Text="{Binding HypertensionDescr, Mode=OneWay}" />
                            </StackPanel>
                            <StackPanel Grid.Row="7">
                                <TextBlock
                                    Width="Auto"
                                    MaxHeight="40"
                                    FontWeight="Bold"
                                    Foreground="Red"
                                    Text="{Binding Other, Mode=OneWay}" />
                            </StackPanel>
                            <StackPanel
                                Grid.Row="8"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                Orientation="Horizontal"
                                Visibility="{Binding ElementName=LayoutRoot, Path=DataContext.mThongTinChung_DiUngCanhBao_ChinhSua, Converter={StaticResource BooleanToVisibility}}">
                                <Button
                                    Name="hpkNewRiskFactor"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    Content="{Binding G0342_G1_ThemYTguyCo, StringFormat='{}{0} ', Source={StaticResource eHCMSResources}}"
                                    Style="{StaticResource MainFrame.HyperlinkButton.01}" />
                            </StackPanel>
                        </Grid>
                    </Border>
                    <Grid x:Name="Col1" Grid.Column="1">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Border
