                                    Width="Auto"
                                    FontWeight="Bold"
                                    Foreground="Blue"
                                    Text="{Binding R0524_G1_RoiLoanLipid, StringFormat='{}- {0}: ', Source={StaticResource eHCMSResources}}" />
