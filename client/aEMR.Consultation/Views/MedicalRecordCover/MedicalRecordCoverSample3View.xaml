<UserControl
    x:Class="aEMR.Consultation.Views.MedicalRecordCover.MedicalRecordCoverSample3View"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:AxControls="clr-namespace:aEMR.Controls;assembly=aEMR.Controls"
    xmlns:Resources="clr-namespace:eHCMSLanguage;assembly=aEMRLanguage"
    xmlns:cal="http://www.caliburnproject.org"
    xmlns:commonconverters="clr-namespace:aEMR.Common.Converters;assembly=aEMR.Common"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:ed="http://schemas.microsoft.com/expression/2010/drawing"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:toolkit="http://schemas.xceed.com/wpf/xaml/toolkit"
    d:DesignHeight="1200"
    d:DesignWidth="1050"
    mc:Ignorable="d">
    <UserControl.Resources>
        <Resources:eHCMSResources x:Key="eHCMSResources" />
        <commonconverters:EnumConverter x:Key="EnumConverterObj" />
        <commonconverters:EnumValueToStringConverter x:Key="EnumValueToStringConverter" />
        <commonconverters:StringFormatConverter x:Key="StringFormatConverter" />
        <BooleanToVisibilityConverter x:Key="BooleanToVisibility" />
        <commonconverters:BooleanToVisibilityNotConverter x:Key="BooleanToNotVisibility" />
        <commonconverters:InverseBoolConverter x:Key="InverseBoolConverter" />
    </UserControl.Resources>
    <ScrollViewer>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="30" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <TextBlock
                x:Name="TitleForm"
                Grid.ColumnSpan="3"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Style="{StaticResource MainFrame.TextBlock.Header.01}"
                Text="{Binding TitleForm, ConverterParameter=Upper, Mode=OneWay, Converter={StaticResource StringFormatConverter}}" />
            <Grid
                x:Name="LayoutRoot"
                Grid.Row="2"
                Background="White">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />

                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120" />
                        <ColumnDefinition Width="150" />
                        <ColumnDefinition />
                        <ColumnDefinition Width="120" />
                        <ColumnDefinition Width="150" />
                    </Grid.ColumnDefinitions>
                </Grid>
                <GroupBox
                    Grid.Row="1"
                    Height="Auto"
                    Header="KHÁM BỆNH"
                    IsEnabled="{Binding IsCanSave, Mode=OneWay}"
                    Style="{StaticResource MainFrame.BlueGroupBox}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="2*" />

                        </Grid.ColumnDefinitions>
                        <StackPanel
                            Grid.Column="4"
                            Orientation="Horizontal"
                            Visibility="{Binding IsTransferTo, Mode=OneWay, Converter={StaticResource BooleanToVisibility}}" />
                        <Grid Grid.Column="4" Visibility="{Binding IsTransferTo_copy, Mode=OneWay, Converter={StaticResource BooleanToVisibility}}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="70" />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                        </Grid>
                        <TextBlock
                            Grid.Row="0"
                            Margin="0,0,5,0"
                            VerticalAlignment="Center"
                            Text="+ Hô hấp:" />
                        <TextBox
                            Grid.Row="0"
                            Grid.RowSpan="2"
                            Grid.Column="1"
                            Margin="0,2"
                            MaxLength="120"
                            Style="{StaticResource MainFrame.TextBox}"
                            Text="{Binding CurrentPatientRegistration.MedRecordCoverSample3.RespiratoryTestResult, Mode=TwoWay}" />
                        <TextBlock
                            Grid.Row="2"
                            Margin="0,0,5,0"
                            VerticalAlignment="Center"
                            Text="+ Tiêu hóa:" />
                        <TextBox
                            Grid.Row="2"
                            Grid.RowSpan="2"
                            Grid.Column="1"
                            Margin="0,2"
                            MaxLength="120"
                            Style="{StaticResource MainFrame.TextBox}"
                            Text="{Binding CurrentPatientRegistration.MedRecordCoverSample3.DigestionTestResult, Mode=TwoWay}" />
                        <TextBlock
                            Grid.Row="4"
                            Margin="0,0,5,0"
                            VerticalAlignment="Center"
                            Text="+ Thận - Tiết niệu - Sinh dục:" />
                        <TextBox
                            Grid.Row="4"
                            Grid.RowSpan="3"
                            Grid.Column="1"
                            Margin="0,2"
                            MaxLength="120"
                            Style="{StaticResource MainFrame.TextBox}"
                            Text="{Binding CurrentPatientRegistration.MedRecordCoverSample3.UrologyTestResult, Mode=TwoWay}" />
                        <TextBlock
                            Grid.Row="7"
                            Margin="0,0,5,0"
                            VerticalAlignment="Center"
                            Text="+ Thần kinh:" />
                        <TextBox
                            Grid.Row="7"
                            Grid.RowSpan="3"
                            Grid.Column="1"
                            Margin="0,2"
                            MaxLength="120"
                            Style="{StaticResource MainFrame.TextBox}"
                            Text="{Binding CurrentPatientRegistration.MedRecordCoverSample3.NeurologyTestResult, Mode=TwoWay}" />
                        <TextBlock
                            Grid.Row="10"
                            Margin="0,0,5,0"
                            VerticalAlignment="Center"
                            Text="+ Cơ - Xương khớp:" />
                        <TextBox
                            Grid.Row="10"
                            Grid.RowSpan="2"
                            Grid.Column="1"
                            Margin="0,2"
                            MaxLength="120"
                            Style="{StaticResource MainFrame.TextBox}"
                            Text="{Binding CurrentPatientRegistration.MedRecordCoverSample3.OrthopaedicsTestResult, Mode=TwoWay}" />
                        <TextBlock
                            Grid.Row="12"
                            Margin="0,0,5,0"
                            VerticalAlignment="Center"
                            Text="+ Tai- Mũi- Họng, Răng- Hàm- Mặt, Mắt, Dinh dưỡng và các bệnh lý khác:" />
                        <TextBox
                            Grid.Row="12"
                            Grid.RowSpan="3"
                            Grid.Column="1"
                            Margin="0,2"
                            MaxLength="120"
                            Style="{StaticResource MainFrame.TextBox}"
                            Text="{Binding CurrentPatientRegistration.MedRecordCoverSample3.OtherDiseases, Mode=TwoWay}" />
                        <TextBlock
                            Grid.Row="15"
                            Margin="0,0,5,0"
                            VerticalAlignment="Center"
                            Text="3.Các xét nghiệm cận lâm sàng cần làm:" />
                        <TextBox
                            Grid.Row="15"
                            Grid.RowSpan="2"
                            Grid.Column="1"
                            Margin="0,2"
                            IsReadOnly="True"
                            Style="{StaticResource MainFrame.TextBox}"
                            Text="{Binding CurrentPatientRegistration.Patient.PatientCode, Mode=TwoWay}" />
                        <TextBlock
                            Grid.Row="17"
                            Margin="0,0,5,0"
                            VerticalAlignment="Center"
                            Text="4.Tóm tắt bệnh án:" />
                        <TextBox
                            Grid.Row="17"
                            Grid.RowSpan="4"
                            Grid.Column="1"
                            Margin="0,2"
                            MaxLength="350"
                            Style="{StaticResource MainFrame.TextBox}"
                            Text="{Binding CurrentPatientRegistration.MedRecordCoverSample3.SummaryOfMedicalRecords, Mode=TwoWay}" />


                    </Grid>
                </GroupBox>
                <GroupBox
                    Grid.Row="2"
                    Height="Auto"
                    Header="IV. Chẩn đoán khi vào khoa điều trị"
                    IsEnabled="{Binding IsCanSave, Mode=OneWay}"
                    Style="{StaticResource MainFrame.BlueGroupBox}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="2*" />
                        </Grid.ColumnDefinitions>
                        <StackPanel
                            Grid.Column="4"
                            Orientation="Horizontal"
                            Visibility="{Binding IsTransferTo, Mode=OneWay, Converter={StaticResource BooleanToVisibility}}" />
                        <Grid Grid.Column="4" Visibility="{Binding IsTransferTo_copy, Mode=OneWay, Converter={StaticResource BooleanToVisibility}}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="70" />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                        </Grid>
                        <TextBlock
                            Grid.Row="0"
                            Margin="0,6,252,5"
                            VerticalAlignment="Center"
                            Text="+ Bệnh chính: " />
                        <TextBox
                            Grid.Row="0"
                            Grid.ColumnSpan="2"
                            Margin="89,2,0,2"
                            IsReadOnly="True"
                            Style="{StaticResource MainFrame.TextBox}"
                            Text="{Binding CurrentPatientRegistration.Patient.PatientCode, Mode=TwoWay}" />
                        <TextBlock
                            Grid.Row="1"
                            Margin="0,5,182,5"
                            VerticalAlignment="Center"
                            Text="+ Bệnh kèm theo (nếu có): " />
                        <TextBox
                            Grid.Row="1"
                            Grid.ColumnSpan="2"
                            Margin="159,2,0,2"
                            IsReadOnly="True"
                            Style="{StaticResource MainFrame.TextBox}"
                            Text="{Binding CurrentPatientRegistration.Patient.PatientCode, Mode=TwoWay}" />
                        <TextBlock
                            Grid.Row="2"
                            Margin="0,5,238,5"
                            VerticalAlignment="Center"
                            Text="+ Phân biệt: " />
                        <TextBox
                            Grid.Row="2"
                            Grid.ColumnSpan="2"
                            Margin="103,2,0,2"
                            MaxLength="250"
                            Style="{StaticResource MainFrame.TextBox}"
                            Text="{Binding CurrentPatientRegistration.MedRecordCoverSample3.Distinguish, Mode=TwoWay}" />

                    </Grid>
                </GroupBox>
                <GroupBox
                    Grid.Row="3"
                    Height="Auto"
                    Header="V. Tiên lượng"
                    IsEnabled="{Binding IsCanSave, Mode=OneWay}"
                    Style="{StaticResource MainFrame.BlueGroupBox}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="2*" />
                        </Grid.ColumnDefinitions>

                        <TextBox
                            Grid.Row="0"
                            Grid.ColumnSpan="2"
                            Margin="89,2,0,2"
                            MaxLength="40"
                            Style="{StaticResource MainFrame.TextBox}"
                            Text="{Binding CurrentPatientRegistration.MedRecordCoverSample3.Prognosis, Mode=TwoWay}" />
                    </Grid>
                </GroupBox>
                <GroupBox
                    Grid.Row="4"
                    Height="Auto"
                    Header="VI. Hướng điều trị"
                    IsEnabled="{Binding IsCanSave, Mode=OneWay}"
                    Style="{StaticResource MainFrame.BlueGroupBox}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="2*" />
                        </Grid.ColumnDefinitions>

                        <TextBox
                            Grid.Row="0"
                            Grid.ColumnSpan="2"
                            Margin="0,2,0,2"
                            MaxLength="200"
                            Style="{StaticResource MainFrame.TextBox}"
                            Text="{Binding CurrentPatientRegistration.MedRecordCoverSample3.TreatmentDirection, Mode=TwoWay}" />
                        <TextBlock
                            Grid.Row="1"
                            Margin="0,5,0,5"
                            VerticalAlignment="Center"
                            Text="Ngày tháng năm:" />
                        <TextBox
                            Grid.Row="1"
                            Grid.ColumnSpan="2"
                            Margin="122,2,453,2"
                            IsReadOnly="True"
                            Style="{StaticResource MainFrame.TextBox}"
                            Text="{Binding CurrentPatientRegistration.Patient.PatientCode, Mode=TwoWay}" />
                        <TextBlock
                            Grid.Row="2"
                            Margin="0,3,0,3"
                            VerticalAlignment="Center"
                            Text="Bác sỹ làm bệnh án:" />
                        <ContentControl
                            x:Name="aucHoldConsultDoctor"
                            Grid.Row="2"
                            Grid.Column="1"
                            Margin="0,0,0,5"
                            HorizontalContentAlignment="Stretch" />

                    </Grid>
                </GroupBox>


                <StackPanel
                    Grid.Row="6"
                    Margin="0,5,0,0"
                    HorizontalAlignment="Right"
                    IsEnabled="{Binding IsCanSave, Mode=OneWay}"
                    Orientation="Horizontal">
                    <Button
                        Width="80"
                        Margin="5,0,5,0"
                        cal:Message.Attach="[Event Click]=[Action btnSave_Click]"
                        Content="{Binding EditTitle, Mode=TwoWay}"
                        FontWeight="Bold" />
                </StackPanel>
            </Grid>
        </Grid>
    </ScrollViewer>
</UserControl>