<UserControl x:Class="aEMRClient.Views.AboutView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:cal="http://www.caliburnproject.org"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="600">
    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch" >
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="0"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" CornerRadius="0,0,5,5" Background="White" >
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30" />
                    <RowDefinition Height="33"/>
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="146*"/>
                    <ColumnDefinition Width="212*"/>
                    <ColumnDefinition Width="40"/>

                </Grid.ColumnDefinitions>

                <TextBlock Text="Title: " HorizontalAlignment="Right" Grid.Row="1" Margin="0,0,5,5"
                    Style="{StaticResource LabelGreenStyle}"
                    />
                <TextBlock Text="Company: " HorizontalAlignment="Right" Grid.Row="2" Margin="0,0,5,5"
                           Style="{StaticResource LabelGreenStyle}"
                    />
                <TextBlock Text="Product: " HorizontalAlignment="Right" Grid.Row="3" Margin="0,0,5,5"    
                           Style="{StaticResource LabelGreenStyle}"
                    />
                <TextBlock Text="Copyright: " HorizontalAlignment="Right" Grid.Row="4" Margin="0,0,5,5" 
                           Style="{StaticResource LabelGreenStyle}"/>
                <TextBlock Text="Description: " HorizontalAlignment="Right" Grid.Row="5" Margin="0,0,5,5" 
                           Style="{StaticResource LabelGreenStyle}"/>
                <TextBlock Text="Publish Version: " HorizontalAlignment="Right" Grid.Row="6" Margin="0,0,5,5"                    
                           Style="{StaticResource LabelGreenStyle}"
                    />

                <TextBlock x:Name="Title" HorizontalAlignment="Left"
                    Grid.Column="1" Grid.Row="1" Margin="5,0,5,5"
                           Style="{StaticResource LabelCrimsonStyle}"
                    />
                <TextBlock x:Name="Company" HorizontalAlignment="Left"
                    Grid.Column="1" Grid.Row="2" Margin="5,0,5,5"
                           Style="{StaticResource LabelCrimsonStyle}"
                    />
                <TextBlock x:Name="Product" HorizontalAlignment="Left"
                    Grid.Column="1" Grid.Row="3" Margin="5,0,5,5"                    
                           Style="{StaticResource LabelCrimsonStyle}"
                    />
                <TextBlock x:Name="Copyright" HorizontalAlignment="Left"
                    Grid.Column="1" Grid.Row="4" Margin="5,0,0,5" 
                           Style="{StaticResource LabelCrimsonStyle}"/>

                <TextBlock x:Name="Description" HorizontalAlignment="Left"
                    Grid.Column="1" Grid.Row="5" Margin="5,0,0,5" 
                           Style="{StaticResource LabelCrimsonStyle}"/>
                <TextBlock x:Name="PublishVersion" HorizontalAlignment="Left"
                    Grid.Column="1" Grid.Row="6" Margin="5,0,5,5"                    
                           Style="{StaticResource LabelCrimsonStyle}"
                    />
                
            </Grid>
        </Border>
        <Border Grid.Row="2" Background="#FF4EB9F9" CornerRadius="0,0,5,5" >

        </Border>

    </Grid>

</UserControl>
