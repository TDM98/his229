                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <Image Source="{Binding}" Margin="5" Stretch="UniformToFill" Height="70" Grid.Row="0" Grid.ColumnSpan="2" />
