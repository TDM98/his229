                <Button.Content>
                    <Image
                        Width="13"
                        Height="13"
                        Opacity="1"
                        Source="{Binding ExamRegStatus, Mode=OneWay, Converter={StaticResource CanDeleteIconConverter_V2}}" />
                </Button.Content>
            </Button>

