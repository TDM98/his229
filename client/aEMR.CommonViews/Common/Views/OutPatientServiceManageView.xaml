        <DataTemplate x:Key="RemoveRegServiceButtonTemplate">
            <Button
                x:Name="lnkDelete"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                cal:Message.Attach="[Event Click]=[Action RemoveServiceDetailsCmd($source, $eventArgs)]"
