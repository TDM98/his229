                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Style="{StaticResource TextBlock.Heading.04}"
                            Text="{Binding T1223_G1_GTinh, Source={StaticResource eHCMSResources}}" />
                        <TextBox
