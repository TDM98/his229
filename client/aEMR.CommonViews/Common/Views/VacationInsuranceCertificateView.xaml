                            Grid.Column="7"
                            Margin="0,2"
                            IsReadOnly="True"
                            Style="{StaticResource MainFrame.TextBox}"
                            Text="{Binding CurrentVacationInsuranceCertificates.MedicalNumber, Mode=TwoWay}" />
                        <TextBlock
                            Grid.Column="8"
                            Margin="0,0,5,0"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Style="{StaticResource TextBlock.Heading.04}"
                            Text="Ngày cấp:" />
                        <TextBox
                            Grid.Column="9"
                            Margin="0,2"
                            IsReadOnly="True"
                            Style="{StaticResource MainFrame.TextBox}"
                            Text="{Binding CurrentVacationInsuranceCertificates.AdmissionDate, StringFormat='dd/MM/yyyy', Mode=TwoWay}" />
                    </Grid>
                </GroupBox>

                <GroupBox
                    Grid.Row="4"
                    Grid.ColumnSpan="2"
                    Header="{Binding G0525_G1_TTinBN, Source={StaticResource eHCMSResources}}"
