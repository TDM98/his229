                            Grid.Column="1"
                            Grid.ColumnSpan="4"
                            Height="82"
                            Margin="0,2"
                            AcceptsReturn="True"
                            Style="{StaticResource MainFrame.TextBox}"
                            Text="{Binding CurrentVacationInsuranceCertificates.Diagnosis, Mode=TwoWay}"
                            TextWrapping="Wrap"
                            VerticalScrollBarVisibility="Auto" />
                        <TextBlock
                            Grid.Row="2"
                            Grid.Column="0"
                            Margin="0,6,4,6"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Style="{StaticResource TextBlock.Heading.04}"
                            Text="{Binding Z0109_G1_NgVaoVien, Source={StaticResource eHCMSResources}}" />
                        <DatePicker
                            x:Name="dtpFromDate"
                            Grid.Row="2"
                            Grid.Column="1"
                            Margin="0,2"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            IsEnabled="False"
                            SelectedDate="{Binding CurrentVacationInsuranceCertificates.AdmissionDate, Mode=TwoWay, NotifyOnValidationError=True}"
                            SelectedDateFormat="Short" />
                        <TextBlock
                            Grid.Row="2"
                            Grid.Column="2"
                            Margin="0,0,5,0"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Style="{StaticResource TextBlock.Heading.04}"
                            Text="{Binding R0422_G1_NgRV, Source={StaticResource eHCMSResources}}" />
                        <DatePicker
                            x:Name="dtpToDate"
                            Grid.Row="2"
                            Grid.Column="3"
                            Margin="0,2"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            IsEnabled="False"
                            SelectedDate="{Binding CurrentVacationInsuranceCertificates.DischargeDate, Mode=TwoWay, NotifyOnValidationError=True}"
                            SelectedDateFormat="Short" />
                        <TextBlock
                            Grid.Row="3"
                            Grid.Column="0"
                            Margin="0,0,4,0"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Style="{StaticResource TextBlock.Heading.04}"
                            Text="{Binding G1933_G1_TuNg, Source={StaticResource eHCMSResources}}" />
                        <DatePicker
                            Grid.Row="3"
                            Grid.Column="1"
                            Margin="0,2"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            cal:Message.Attach="[Event SelectedDateChanged]=[Action DatePicker_SelectedDateChanged($source,$eventArgs)]"
                            IsEnabled="False"
                            SelectedDate="{Binding CurrentVacationInsuranceCertificates.FromDate, Mode=TwoWay, NotifyOnValidationError=True}"
                            SelectedDateFormat="Short" />
                        <TextBlock
                            Grid.Row="3"
                            Grid.Column="2"
                            Margin="0,0,4,0"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Style="{StaticResource TextBlock.Heading.04}"
                            Text="{Binding K3192_G1_DenNg, Source={StaticResource eHCMSResources}}" />
                        <DatePicker
                            Grid.Row="3"
                            Grid.Column="3"
                            Margin="0,2"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            cal:Message.Attach="[Event SelectedDateChanged]=[Action DatePicker_SelectedDateChanged($source,$eventArgs)]"
                            SelectedDate="{Binding CurrentVacationInsuranceCertificates.ToDate, Mode=TwoWay, NotifyOnValidationError=True}"
                            SelectedDateFormat="Short" />
                        <StackPanel
                            Grid.Row="3"
                            Grid.Column="5"
                            Orientation="Horizontal">

                            <TextBlock
                                Margin="0,0,4,0"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                Style="{StaticResource TextBlock.Heading.04}"
                                Text="Số ngày nghỉ" />
                            <TextBox
                                Width="50"
                                Height="22"
                                Margin="0,2"
                                IsReadOnly="True"
                                Style="{StaticResource MainFrame.TextBox}"
                                Text="{Binding NgayNghiOm, Mode=TwoWay}" />
                        </StackPanel>

                        <CheckBox
                            Grid.Row="4"
                            Grid.Column="4"
                            VerticalContentAlignment="Center"
                            Content="Hưởng bảo hiểm"
                            IsChecked="{Binding CurrentVacationInsuranceCertificates.IsInsurance, Mode=TwoWay}"
                            Visibility="{Binding IsPrenatal, Converter={StaticResource BooleanToNotVisibility}}" />
                        <TextBlock
                            Grid.Row="7"
                            Grid.ColumnSpan="2"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Style="{StaticResource TextBlock.Heading.04}"
                            Text="Xác nhận của thủ trưởng/ Bác sĩ được ủy quyền"
                            TextWrapping="Wrap" />
                        <AxControls:AxAutoComplete
                            Grid.Row="7"
                            Grid.Column="2"
                            Grid.ColumnSpan="3"
                            Width="Auto"
                            Height="22"
                            HorizontalAlignment="Stretch"
                            cal:Message.Attach="[Event Populating]=[Action DoctorStaff_Populating($source,$eventArgs)]                                                                         ;[Event DropDownClosed]=[Action DoctorStaff_DropDownClosed($source,$eventArgs)]"
                            FilterMode="None"
                            IsDropDownOpen="True"
                            ItemContainerStyle="{StaticResource AxAutoCompleteBoxBkg}"
                            MinimumPopulateDelay="300"
                            MinimumPrefixLength="0"
                            SelectedItem="{Binding gSelectedDoctorStaff, Mode=TwoWay}"
                            Style="{StaticResource AxAutoCompleteMyStyle}"
                            Text="{Binding gSelectedDoctorStaff.FullName}"
                            ValueMemberBinding="{Binding FullName, Mode=TwoWay}"
                            ValueMemberPath="FullName">
                            <AxControls:AxAutoComplete.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel>
                                        <TextBlock
                                            Margin="0"
                                            Padding="0"
                                            Style="{StaticResource MainFrame.TextBlock.01}"
                                            Text="{Binding FullName}" />
                                    </StackPanel>
                                </DataTemplate>
                            </AxControls:AxAutoComplete.ItemTemplate>
                        </AxControls:AxAutoComplete>
                    </Grid>
                </GroupBox>

                <GroupBox
                    Grid.Row="3"
                    Grid.ColumnSpan="2"
                    Style="{StaticResource MainFrame.BlueGroupBox}"
                    Visibility="{Binding IsPrenatal, Converter={StaticResource BooleanToNotVisibility}}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="115" />
                            <ColumnDefinition Width="100" />
                            <ColumnDefinition Width="80" />
                            <ColumnDefinition Width="100" />
                            <ColumnDefinition Width="70" />
                            <ColumnDefinition Width="100" />
                            <ColumnDefinition Width="70" />
                            <ColumnDefinition Width="100" />
                            <ColumnDefinition Width="70" />
                            <ColumnDefinition Width="100" />
                        </Grid.ColumnDefinitions>
                        <TextBlock
                            Margin="0,0,5,0"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Style="{StaticResource TextBlock.Heading.04}"
                            Text="Mẫu số:" />
                        <TextBox
                            Grid.Column="1"
                            Margin="0,2"
                            IsReadOnly="True"
                            Style="{StaticResource MainFrame.TextBox}"
                            Text="{Binding InsuranceCertificatePrefix, Mode=TwoWay}" />
                        <TextBlock
                            Grid.Column="2"
                            Margin="0,0,5,0"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Style="{StaticResource TextBlock.Heading.04}"
                            Text="Số chứng từ:" />
                        <TextBox
                            Grid.Column="3"
                            Margin="0,2"
                            IsReadOnly="True"
                            Style="{StaticResource MainFrame.TextBox}"
                            Text="{Binding CurrentVacationInsuranceCertificates.DocumentNumber, Mode=TwoWay}" />
                        <TextBlock
                            Grid.Column="4"
                            Margin="0,0,5,0"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Style="{StaticResource TextBlock.Heading.04}"
                            Text="Số seri:" />
                        <TextBox
                            Grid.Column="5"
                            Margin="0,2"
                            IsReadOnly="True"
                            Style="{StaticResource MainFrame.TextBox}"
                            Text="{Binding CurrentVacationInsuranceCertificates.SeriNumberText, Mode=TwoWay}" />
                        <TextBlock
                            Grid.Column="6"
                            Margin="0,0,5,0"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Style="{StaticResource TextBlock.Heading.04}"
                            Text="Số KCB:" />
