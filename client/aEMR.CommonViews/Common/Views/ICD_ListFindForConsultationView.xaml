<UserControl
    x:Class="aEMR.CommonViews.Views.ICD_ListFindForConsultationView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:AutoBoxTK="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Input.Toolkit"
    xmlns:Resources="clr-namespace:eHCMSLanguage;assembly=aEMRLanguage"
    xmlns:cal="http://www.caliburnproject.org"
    xmlns:commonctrl="clr-namespace:aEMR.Controls;assembly=aEMR.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
    xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
    d:DesignHeight="550"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <UserControl.Resources>
        <Resources:eHCMSResources x:Key="eHCMSResources" />
        <BooleanToVisibilityConverter x:Key="BooleanToVisibility" />
    </UserControl.Resources>
    <Grid
        x:Name="LayoutICD"
        MinWidth="1000"
        MinHeight="500"
        Margin="5"
        Background="White">

        <xctk:BusyIndicator BusyContent="{Binding DlgBusyContent}" IsBusy="{Binding DlgIsBusyFlag}">
            <TabControl>
                <TabItem Header="{Binding Z3111_G1_DM_BYT, Source={StaticResource eHCMSResources}}">
                    <wv2:WebView2 Name="webView" Source="{Binding SourceLink, Mode=TwoWay}" />
                    <!--<ContentPresenter Content="{Binding Browser}" />-->
                </TabItem>
                <TabItem Header="{Binding Z3112_G1_DM_BV, Source={StaticResource eHCMSResources}}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0">
                            <TextBlock
                                Margin="0,10,0,5"
                                HorizontalAlignment="Center"
                                FontSize="14"
                                FontWeight="Bold"
                                Foreground="#FF0084FF"
                                Text="Danh mục ICD" />
                        </Grid>

                        <Border
                            Grid.Row="2"
                            Margin="0,10,0,5"
                            Background="AliceBlue"
                            BorderBrush="#C1D2E6"
                            BorderThickness="1"
                            CornerRadius="3">
                            <StackPanel>
                                <Border
                                    Margin="10,-10,0,0"
                                    HorizontalAlignment="Left"
                                    Background="AliceBlue"
                                    BorderBrush="#6F8AA9"
                                    BorderThickness="1">
                                    <TextBlock
                                        Margin="10,0,10,0"
                                        FontWeight="Bold"
                                        Text="{Binding G1174_G1_TimKiem, Source={StaticResource eHCMSResources}}" />
                                </Border>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="120" />
                                        <ColumnDefinition />
                                    </Grid.ColumnDefinitions>
                                    <Label
                                        Grid.Row="0"
                                        Grid.Column="0"
                                        Margin="0,2,5,2"
                                        HorizontalAlignment="Right"
                                        Content="Mã ICD"
                                        FontWeight="Normal" />
                                    <TextBox
                                        x:Name="tbSearchICD10Code"
                                        Grid.Row="0"
                                        Grid.Column="1"
                                        Width="400"
                                        Margin="0,2,5,2"
                                        HorizontalAlignment="Left"
                                        Text="{Binding SearchCriteria.ICD10Code, Mode=TwoWay}" />
                                    <Label
                                        Grid.Row="1"
                                        Grid.Column="0"
                                        Margin="0,2,5,2"
                                        HorizontalAlignment="Right"
                                        Content="Chẩn đoán"
                                        FontWeight="Normal" />
                                    <TextBox
                                        x:Name="tbSearchDiseaseNameVN"
                                        Grid.Row="1"
                                        Grid.Column="1"
                                        Width="400"
                                        Margin="0,2,5,2"
                                        HorizontalAlignment="Left"
                                        Text="{Binding SearchCriteria.DiseaseNameVN, Mode=TwoWay}" />

                                    <Button
                                        x:Name="btSearchICD"
                                        Grid.Row="2"
                                        Grid.Column="1"
                                        Width="60"
                                        Margin="0,0,5,5"
                                        HorizontalAlignment="Left"
                                        Visibility="{Binding bbtSearch, Converter={StaticResource BooleanToVisibility}}">
                                        <StackPanel Orientation="Horizontal">
                                            <Image
                                                Width="20"
                                                Height="18"
                                                VerticalAlignment="Center"
                                                Source="/aEMR.CommonViews;component/Assets/Images/1306555029_find.png" />
                                            <TextBlock VerticalAlignment="Center" Text="{Binding G0981_G1_Tim, Source={StaticResource eHCMSResources}}" />
                                        </StackPanel>
                                    </Button>
                                </Grid>
                            </StackPanel>
                        </Border>
                        <Border
                            Grid.Row="3"
                            Margin="0,10,0,5"
                            Background="AliceBlue"
                            BorderBrush="#C1D2E6"
                            BorderThickness="1"
                            CornerRadius="3">
                            <StackPanel>
                                <Border
                                    Margin="10,-10,0,0"
                                    HorizontalAlignment="Left"
                                    Background="AliceBlue"
                                    BorderBrush="#6F8AA9"
                                    BorderThickness="1">
                                    <TextBlock
                                        Margin="10,0,10,0"
                                        FontWeight="Bold"
                                        Text="Danh sách ICD" />
                                </Border>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition />
                                        <RowDefinition Height="25" />
                                    </Grid.RowDefinitions>
                                    <commonctrl:ReadOnlyDataGrid
                                        Name="dtgList"
                                        Grid.Row="0"
                                        Margin="0,2"
                                        AutoGenerateColumns="False"
                                        CanUserAddRows="False"
                                        ColumnHeaderStyle="{StaticResource MainFrame.DataGridColumnHeaderStyle}"
                                        HeadersVisibility="All"
                                        HorizontalScrollBarVisibility="Auto"
                                        IsReadOnly="True"
                                        ItemsSource="{Binding ObjICD_ByIDCode_Paging, Mode=TwoWay}"
                                        Style="{StaticResource MainFrame.DataGridStyle}"
                                        VerticalScrollBarVisibility="Visible">
                                        <DataGrid.Columns>

                                            <DataGridTextColumn
                                                x:Name="col4"
                                                Binding="{Binding ICD10Code, Mode=TwoWay}"
                                                Header="ICDCode" />
                                            <DataGridTextColumn
                                                x:Name="col5"
                                                Binding="{Binding DiseaseNameVN, Mode=TwoWay}"
                                                Header="Chẩn đoán" />
                                            <DataGridTextColumn
                                                x:Name="col6"
                                                Binding="{Binding DiseaseDescription, Mode=TwoWay}"
                                                Header="Mô tả" />
                                            <DataGridTemplateColumn Header="Đang dùng">
                                                <DataGridTemplateColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <CheckBox IsChecked="{Binding IsActive, Mode=OneWay}" />
                                                    </DataTemplate>
                                                </DataGridTemplateColumn.CellTemplate>
                                            </DataGridTemplateColumn>
                                            <DataGridTextColumn
                                                x:Name="col7"
                                                Binding="{Binding Gender.Name, Mode=TwoWay}"
                                                Header="Giới tính" />
                                            <DataGridTextColumn
                                                x:Name="col8"
                                                Binding="{Binding AgeFrom, Mode=TwoWay, StringFormat='{}{0:#}'}"
                                                Header="Tuổi từ (ngày)" />
                                            <DataGridTextColumn
                                                x:Name="col9"
                                                Binding="{Binding AgeTo, Mode=TwoWay, StringFormat='{}{0:#}'}"
                                                Header="Tuổi đến (ngày)" />
                                            <DataGridTemplateColumn Header="ICD Chính">
                                                <DataGridTemplateColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <CheckBox IsChecked="{Binding NotBeMain, Mode=OneWay}" />
                                                    </DataTemplate>
                                                </DataGridTemplateColumn.CellTemplate>
                                            </DataGridTemplateColumn>
                                        </DataGrid.Columns>
                                    </commonctrl:ReadOnlyDataGrid>
                                    <commonctrl:DataPager
                                        Grid.Row="1"
                                        VerticalAlignment="Bottom"
                                        PageSize="9"
                                        Source="{Binding ObjICD_ByIDCode_Paging, Mode=TwoWay}" />
                                </Grid>
                            </StackPanel>
                        </Border>
                    </Grid>
                </TabItem>


            </TabControl>

        </xctk:BusyIndicator>
    </Grid>


</UserControl>