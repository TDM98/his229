                    Margin="0,10,0,5"
                    HorizontalAlignment="Center"
                    VerticalContentAlignment="Center"
                    BorderThickness="2"
                    Content="{Binding G2372_G1_XNhanBnKhongDTriNoiTru, Source={StaticResource eHCMSResources}}"
