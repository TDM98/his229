            VerticalAlignment="Stretch"
            Header="{Binding G0644_G1_TTinNhVien, Source={StaticResource eHCMSResources}}"
            Style="{StaticResource MainFrame.GroupBox}">
            <StackPanel>
                <StackPanel Margin="5,0,5,5" Orientation="Horizontal">
