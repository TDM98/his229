                    <Button Content="{Binding Q0483_G1_QuayLaiThanhToanBill, Source={StaticResource eHCMSResources}}" x:Name="PayCmd" Width="160" Style="{StaticResource MainFrame.Button}"
                        Margin="10,0,0,0" />
                </StackPanel>-->
            </Grid>
        </GroupBox>
    </Grid>
