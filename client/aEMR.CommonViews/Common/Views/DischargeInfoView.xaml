                        Grid.Column="3"
                        HorizontalAlignment="Left"
                        IsEnabled="{Binding IsLeaveForTreatment, Mode=TwoWay}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <TextBlock
                            Grid.Row="0"
                            Grid.Column="0"
                            Margin="20,2,2,0"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Style="{StaticResource MainFrame.TextBlock.00}"
                            Text="{Binding G1933_G1_TuNg, Source={StaticResource eHCMSResources}, StringFormat='{}{0}:'}" />
                        <DatePicker
                            Grid.Row="0"
                            Grid.Column="1"
                            Margin="2,0,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            SelectedDate="{Binding FromDate, Mode=TwoWay}"
                            Style="{StaticResource MainFrame.DatePicker}" />
                        <TextBlock
                            Grid.Row="0"
                            Grid.Column="2"
                            Margin="5,2,2,0"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Style="{StaticResource MainFrame.TextBlock.00}"
                            Text="{Binding K3192_G1_DenNg, Source={StaticResource eHCMSResources}, StringFormat='{}{0}:'}" />
                        <DatePicker
                            Grid.Row="0"
                            Grid.Column="3"
                            Margin="2,0,0,0"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            SelectedDate="{Binding ToDate, Mode=TwoWay}"
                            Style="{StaticResource MainFrame.DatePicker}" />
                        <TextBlock
                            Grid.Column="4"
                            Margin="20,0,0,0"
                            VerticalAlignment="Center"
                            Style="{StaticResource MainFrame.TextBlock.Title1}"
                            Text="Số ngày nghỉ: " />
                        <TextBox
                            Grid.Column="5"
                            Width="50"
                            Height="24"
                            Margin="2,0,2,2"
                            HorizontalAlignment="Stretch"
                            IsEnabled="False"
                            Text="{Binding Registration.AdmissionInfo.DischargePapersInfo.NumberDayOfLeaveForTreatment, Mode=TwoWay}" />
                    </Grid>
                </Grid>
                <!--  KMx: Hiện tại nút Quay lại thanh toán bill bị lỗi nên không sử dụng (15/12/2014 14:47).  -->
