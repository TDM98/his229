                <ContentControl
                    Name="PatientAllocListingContent"
                    HorizontalContentAlignment="Stretch"
                    VerticalContentAlignment="Stretch" />

                <ContentControl
                    Name="InPatientDeptListingContent"
                    HorizontalContentAlignment="Stretch"
                    VerticalContentAlignment="Stretch"
                    Visibility="{Binding ShowChangeDeptCmd, Mode=OneWay, Converter={StaticResource MyVisibilityConverter}}" />
            </StackPanel>
        </GroupBox>
        <GroupBox
            Grid.Row="1"
            Grid.Column="2"
            Margin="0,5,0,0"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Header="{Binding G0581_G1_TTinDK, Source={StaticResource eHCMSResources}}"
            Style="{StaticResource MainFrame.GroupBox}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="30" />
                </Grid.RowDefinitions>
                <ContentControl
                    x:Name="BillingInvoiceListingContent"
