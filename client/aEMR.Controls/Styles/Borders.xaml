<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="BorderActionCRUDStyle" TargetType="Border">
        <Setter Property="Background" Value="{DynamicResource DarkGreyBrush}"/>
        <Setter Property="BorderThickness" Value="0"/>        
        <Setter Property="CornerRadius" Value="3"/>
        <Setter Property="Padding" Value="0,10"/>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect BlurRadius="2" Direction="300" Opacity="0.25" ShadowDepth="1"/>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="BorderGroupContainerStyle" TargetType="Border">
        <Setter Property="Background" Value="{DynamicResource GreyGradient1Brush}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="CornerRadius" Value="3"/>
        <Setter Property="Padding" Value="13"/>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect BlurRadius="2" Direction="300" Opacity="0.25" ShadowDepth="1"/>
            </Setter.Value>
        </Setter>
    </Style>
    
    <Style x:Key="BorderWorkSpaceStyle" TargetType="Border">
        <Setter Property="Background" Value="{DynamicResource BorderWorkspaceBackgroundBrush}"/>
        <Setter Property="Padding" Value="13"/>
        <Setter Property="BorderThickness" Value="0"/>
    </Style>
    
    <Style x:Key="BorderContentHolderStyle" TargetType="Border">
        <Setter Property="Background" Value="White"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="CornerRadius" Value="3"/>
        <Setter Property="Padding" Value="13"/>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect BlurRadius="2" Direction="300" Opacity="0.25" ShadowDepth="1"/>
            </Setter.Value>
        </Setter>
    </Style>
    
    <!--Customer Heading-->    
    <Style x:Key="BorderHeaderStyle" TargetType="Border">
        <Setter Property="Background" Value="Black" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="CornerRadius" Value="3" />
        <Setter Property="Padding" Value="13" />
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect BlurRadius="2" Direction="300" Opacity="0.25" ShadowDepth="1" />
            </Setter.Value>
        </Setter>
    </Style>
    <Style x:Key="BorderFinancialStatusStyle" TargetType="Border">
        <Setter Property="Background" Value="Green" />
        <Setter Property="CornerRadius" Value="10" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="CornerRadius" Value="3" />
        <Setter Property="Height" Value="10" />
        <Setter Property="Width" Value="270" />
    </Style>
    <Style x:Key="BorderOtherStatusStyle" TargetType="Border">
        <Setter Property="Background" Value="Green" />
        <Setter Property="CornerRadius" Value="10" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="CornerRadius" Value="3" />
        <Setter Property="Height" Value="10" />
        <Setter Property="Width" Value="150" />
    </Style>
    <Style x:Key="BorderOtherStatusAlertStyle" TargetType="Border">
        <Setter Property="Background" Value="Red" />
        <Setter Property="CornerRadius" Value="10" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="CornerRadius" Value="3" />
        <Setter Property="Height" Value="10" />
        <Setter Property="Width" Value="150" />
    </Style>

</ResourceDictionary>