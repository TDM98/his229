<UserControl
    x:Class="aEMR.Configuration.InsuranceBenefitCategories.Views.InsuranceBenefitCategories_AddEditView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Converters="clr-namespace:aEMR.Common.Converters;assembly=aEMR.Common"
    xmlns:Resources="clr-namespace:eHCMSLanguage;assembly=aEMRLanguage"
    xmlns:commonconverters="clr-namespace:aEMR.Common.Converters;assembly=aEMR.Common"
    xmlns:controlslib="clr-namespace:aEMR.Controls;assembly=aEMR.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
    d:DesignHeight="220"
    d:DesignWidth="400"
    mc:Ignorable="d">
    <UserControl.Resources>
        <Resources:eHCMSResources x:Key="eHCMSResources" />
        <commonconverters:DecimalConverter x:Key="DecimalConverter" />
        <Converters:DecimalToPercentConverter x:Key="DecimalToPercentConverter" />
    </UserControl.Resources>
    <xctk:BusyIndicator BusyContent="{Binding DlgBusyContent}" IsBusy="{Binding DlgIsBusyFlag}">
        <Grid x:Name="LayoutRoot" Background="White">
            <Grid x:Name="GridMain" Margin="5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <TextBlock
                    x:Name="TitleForm"
                    Grid.Row="0"
                    Margin="5,5,0,5"
                    FontSize="14"
                    FontWeight="Bold"
                    Foreground="#FF0084FF"
                    Text="Title" />

                <Grid Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120" />
                        <ColumnDefinition MaxWidth="250" />
                    </Grid.ColumnDefinitions>
                    <Label
                        Grid.Row="0"
                        Margin="0,2,5,2"
                        HorizontalAlignment="Right"
                        Content="Mã đối tượng" />
                    <TextBox
                        x:Name="tbICD10Code"
                        Grid.Row="0"
                        Grid.Column="1"
                        Height="30"
                        Margin="0,2,5,2"
                        VerticalAlignment="Center"
                        VerticalContentAlignment="Center"
                        MaxLength="64"
                        Text="{Binding ObjInsuranceBenefitCategories_Current.HIPCode, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnExceptions=True}" />

                    <Label
                        Grid.Row="1"
                        Margin="0,2,5,2"
                        HorizontalAlignment="Right"
                        Content="Mã quyền lợi" />
                    <TextBox
                        x:Name="tbDiseaseNameVN"
                        Grid.Row="1"
                        Grid.Column="1"
                        Height="30"
                        Margin="0,2,5,2"
                        VerticalAlignment="Center"
                        VerticalContentAlignment="Center"
                        MaxLength="64"
                        Text="{Binding ObjInsuranceBenefitCategories_Current.BenefitCode, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnExceptions=True}" />

                    <Label
                        Grid.Row="2"
                        Margin="0,2,5,2"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Content="Mức hưởng" />
                    <TextBox
                        Grid.Row="2"
                        Grid.Column="1"
                        Height="30"
                        Margin="0,2,5,2"
                        VerticalAlignment="Center"
                        VerticalContentAlignment="Center"
                        AcceptsReturn="True"
                        FontWeight="Normal"
                        Foreground="Black"
                        HorizontalScrollBarVisibility="Auto"
                        MaxLength="512"
                        Text="{Binding ObjInsuranceBenefitCategories_Current.RebatePercentage, Mode=TwoWay, Converter={StaticResource DecimalToPercentConverter}}" />

                    <Label
                        Grid.Row="3"
                        Margin="0,2,5,2"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Content="Tên đối tượng BHYT" />
                    <TextBox
                        Grid.Row="3"
                        Grid.Column="1"
                        Height="30"
                        Margin="0,2,5,2"
                        VerticalAlignment="Center"
                        VerticalContentAlignment="Center"
                        AcceptsReturn="True"
                        FontWeight="Normal"
                        Foreground="Black"
                        HorizontalScrollBarVisibility="Auto"
                        MaxLength="512"
                        Text="{Binding ObjInsuranceBenefitCategories_Current.HIPName, Mode=TwoWay}" />

                    <Label
                        Grid.Row="4"
                        Margin="0,2,5,2"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Content="Miêu tả" />
                    <TextBox
                        Grid.Row="4"
                        Grid.Column="1"
                        Height="30"
                        MinHeight="150"
                        MaxWidth="400"
                        MaxHeight="200"
                        Margin="0,2,5,2"
                        VerticalAlignment="Top"
                        VerticalContentAlignment="Center"
                        AcceptsReturn="True"
                        FontWeight="Normal"
                        Foreground="Black"
                        HorizontalScrollBarVisibility="Auto"
                        MaxLength="512"
                        Text="{Binding ObjInsuranceBenefitCategories_Current.Notes, Mode=TwoWay}"
                        TextWrapping="Wrap"
                        VerticalScrollBarVisibility="Auto" />

                    <Label
                        Grid.Row="5"
                        Margin="0,2,5,2"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Content="Nhóm" />
                    <TextBox
                        Grid.Row="5"
                        Grid.Column="1"
                        Height="30"
                        Margin="0,2,5,2"
                        VerticalAlignment="Center"
                        VerticalContentAlignment="Center"
                        AcceptsReturn="True"
                        FontWeight="Normal"
                        Foreground="Black"
                        HorizontalScrollBarVisibility="Auto"
                        MaxLength="512"
                        Text="{Binding ObjInsuranceBenefitCategories_Current.HIPGroup, Mode=TwoWay}" />

                    <Label
                        Grid.Row="6"
                        Margin="0,2,5,2"
                        HorizontalAlignment="Right"
                        Content="Đang dùng" />
                    <CheckBox
                        Grid.Row="6"
                        Grid.Column="1"
                        Margin="5,2,5,2"
                        VerticalAlignment="Center"
                        IsChecked="{Binding ObjInsuranceBenefitCategories_Current.IsActive, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnExceptions=True}" />

                    <StackPanel
                        Grid.Row="7"
                        Grid.Column="1"
                        Margin="0,0,0,30"
                        Orientation="Horizontal">
                        <Button
                            x:Name="btSave"
                            Width="80"
                            Margin="0,2,5,2"
                            HorizontalAlignment="Left">
                            <StackPanel Orientation="Horizontal">
                                <Image
                                    Width="20"
                                    Height="18"
                                    VerticalAlignment="Center"
                                    Source="/aEMR.CommonViews;component/Assets/Images/saveanddown24x24border.png" />
                                <TextBlock
                                    Margin="5,0,0,0"
                                    VerticalAlignment="Center"
                                    Text="{Binding T2937_G1_Luu, Source={StaticResource eHCMSResources}}" />
                            </StackPanel>
                        </Button>

                        <Button
                            x:Name="btClose"
                            Width="80"
                            Margin="0,2,5,2"
                            HorizontalAlignment="Left">
                            <StackPanel Orientation="Horizontal">
                                <Image
                                    Width="20"
                                    Height="18"
                                    VerticalAlignment="Center"
                                    Source="/aEMR.CommonViews;component/Assets/Images/Button-exit-icon.png" />
                                <TextBlock
                                    Margin="5,0,0,0"
                                    VerticalAlignment="Center"
                                    Text="{Binding K3735_G1_Dong, Source={StaticResource eHCMSResources}}"
                                    TextAlignment="Center" />
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Grid>
            </Grid>
            <!--</toolkit:BusyIndicator>-->
        </Grid>
    </xctk:BusyIndicator>
</UserControl>
