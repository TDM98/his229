                                        Grid.Row="1"
                                        Grid.Column="1"
                                        Width="300"
                                        Margin="0,2,5,2"
                                        HorizontalAlignment="Left"
                                        cal:Message.Attach="[Event SelectionChanged]=[Action cboVRegistrationTypeSelectedItemChanged($this.SelectedItem)]"
                                        DisplayMemberPath="ObjectValue"
                                        FontWeight="Normal"
                                        Foreground="Black"
                                        ItemsSource="{Binding VRegistrationType, Mode=OneWay}"
                                        SelectedItem="{Binding VRegistrationTypeSelected, Mode=TwoWay}"
                                        SelectedValuePath="LookupID"
                                        Style="{StaticResource MainFrame.ComboBox}" />
                                    <Label
                                        Grid.Row="1"
                                        Grid.Column="2"
                                        Margin="0,2,5,2"
