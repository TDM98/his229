                                         IsBusy="{Binding IsLoading, Mode=OneWay}"                                         
                                         DisplayAfter="0:0:0.100"
                                         Margin="0,0,0,10">-->
            <Grid >
                <Grid.RowDefinitions>
                <RowDefinition Height="40" />
                <RowDefinition Height="90" />
