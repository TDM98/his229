<UserControl
    x:Class="aEMR.Configuration.DiseaseProgression.Views.DiseaseProgression_ListFindView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Resources="clr-namespace:eHCMSLanguage;assembly=aEMRLanguage"
    xmlns:cal="http://www.caliburnproject.org"
    xmlns:commonctrl="clr-namespace:aEMR.Controls;assembly=aEMR.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
    d:DesignHeight="550"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <UserControl.Resources>
        <Resources:eHCMSResources x:Key="eHCMSResources" />
        <BooleanToVisibilityConverter x:Key="BooleanToVisibility" />
    </UserControl.Resources>
    <TabControl
        Name="tabCitiesProvincesInfo"
        Height="Auto"
        Margin="0"
        HorizontalContentAlignment="Stretch"
        VerticalContentAlignment="Stretch"
        IsTabStop="False"
        Style="{StaticResource MainFrame.TabControl}">
        <TabItem x:Name="tabCitiesProvincesItems" Header="Diễn tiến bệnh">
            <Grid
                x:Name="LayoutRoot"
                Margin="5"
                Background="White">
                <xctk:BusyIndicator BusyContent="{Binding DlgBusyContent}" IsBusy="{Binding DlgIsBusyFlag}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0">
                            <TextBlock
                                Margin="0,10,0,5"
                                HorizontalAlignment="Center"
                                FontSize="14"
                                FontWeight="Bold"
                                Foreground="#FF0084FF"
                                Text="Danh mục diễn tiến bệnh" />
                        </Grid>
                        <StackPanel
                            Grid.Row="1"
                            Margin="0,5"
                            Orientation="Horizontal"
                            Visibility="{Binding hplAddNewVisible, Mode=TwoWay}">
                            <Button
                                Name="hplAddNew"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                cal:Message.Attach="[Event Click]=[Action hplAddNew_Click()]"
                                FontSize="12"
                                FontWeight="Bold"
                                Foreground="#FF0084FF"
                                Style="{StaticResource MainFrame.HyperlinkButton.01}"
                                Visibility="{Binding bhplAddNew, Converter={StaticResource BooleanToVisibility}}">
                                <Button.Content>
                                    <StackPanel Orientation="Horizontal">
                                        <Image
                                            Width="13"
                                            Height="13"
                                            Opacity="1"
                                            Source="/aEMR.CommonViews;component/Assets/Images/page-add-icon2.png" />
                                        <TextBlock Text="Tạo mới diễn tiến bệnh" />
                                    </StackPanel>
                                </Button.Content>
                            </Button>
                        </StackPanel>
                        <Border
                            Grid.Row="2"
                            Margin="0,10,0,5"
                            Background="AliceBlue"
                            BorderBrush="#C1D2E6"
                            BorderThickness="1"
                            CornerRadius="3">
                            <StackPanel>
                                <Border
                                    Margin="10,-10,0,0"
                                    HorizontalAlignment="Left"
                                    Background="AliceBlue"
                                    BorderBrush="#6F8AA9"
                                    BorderThickness="1">
                                    <TextBlock
                                        Margin="10,0,10,0"
                                        FontWeight="Bold"
                                        Text="{Binding G1174_G1_TimKiem, Source={StaticResource eHCMSResources}}" />
                                </Border>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="120" />
                                        <ColumnDefinition />
                                    </Grid.ColumnDefinitions>
                                    <Label
                                        Grid.Row="0"
                                        Grid.Column="0"
                                        Margin="0,2,5,2"
                                        HorizontalAlignment="Right"
                                        Content="Tên diễn tiến bệnh"
                                        FontWeight="Normal" />
                                    <TextBox
                                        x:Name="tbSearch"
                                        Grid.Row="0"
                                        Grid.Column="1"
                                        Width="400"
                                        Margin="0,2,5,2"
                                        HorizontalAlignment="Left"
                                        Text="{Binding SearchDiseaseProgression, Mode=TwoWay}" />

                                    <Button
                                        x:Name="btSearch"
                                        Grid.Row="2"
                                        Grid.Column="1"
                                        Width="60"
                                        Margin="0,0,5,5"
                                        HorizontalAlignment="Left"
                                        Visibility="{Binding bbtSearch, Converter={StaticResource BooleanToVisibility}}">
                                        <StackPanel Orientation="Horizontal">
                                            <Image
                                                Width="20"
                                                Height="18"
                                                VerticalAlignment="Center"
                                                Source="/aEMR.CommonViews;component/Assets/Images/1306555029_find.png" />
                                            <TextBlock VerticalAlignment="Center" Text="{Binding G0981_G1_Tim, Source={StaticResource eHCMSResources}}" />
                                        </StackPanel>
                                    </Button>
                                </Grid>
                            </StackPanel>
                        </Border>
                        <Border
                            Grid.Row="3"
                            Margin="0,10,0,5"
                            Background="AliceBlue"
                            BorderBrush="#C1D2E6"
                            BorderThickness="1"
                            CornerRadius="3">
                            <StackPanel>
                                <Border
                                    Margin="10,-10,0,0"
                                    HorizontalAlignment="Left"
                                    Background="AliceBlue"
                                    BorderBrush="#6F8AA9"
                                    BorderThickness="1">
                                    <TextBlock
                                        Margin="10,0,10,0"
                                        FontWeight="Bold"
                                        Text="Danh sách diễn tiến bệnh" />
                                </Border>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition />
                                        <RowDefinition Height="25" />
                                    </Grid.RowDefinitions>
                                    <commonctrl:ReadOnlyDataGrid
                                        Name="dtgList"
                                        Grid.Row="0"
                                        Margin="0,2"
                                        AutoGenerateColumns="False"
                                        CanUserAddRows="False"
                                        ColumnHeaderStyle="{StaticResource MainFrame.DataGridColumnHeaderStyle}"
                                        HeadersVisibility="All"
                                        HorizontalScrollBarVisibility="Auto"
                                        IsReadOnly="True"
                                        ItemsSource="{Binding ObjDiseaseProgression_Paging, Mode=TwoWay}"
                                        Style="{StaticResource MainFrame.DataGridStyle}"
                                        VerticalScrollBarVisibility="Visible">
                                        <DataGrid.Columns>
                                            <DataGridTemplateColumn x:Name="colTemplate" Header="">
                                                <DataGridTemplateColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <StackPanel Orientation="Horizontal">
                                                            <Button
                                                                x:Name="hplEdit"
                                                                HorizontalAlignment="Center"
                                                                VerticalAlignment="Center"
                                                                cal:Message.Attach="[Event Click]=[Action hplEdit_Click($datacontext)]                                                              ;[Event Loaded]=[Action hplEdit_Loaded($source)]"
                                                                Style="{StaticResource MainFrame.HyperlinkButton.01}"
                                                                ToolTipService.ToolTip="{Binding T1484_G1_HChinh, Source={StaticResource eHCMSResources}}">
                                                                <Button.Content>
                                                                    <Image
                                                                        Width="15"
                                                                        Height="15"
                                                                        Opacity="1"
                                                                        Source="/aEMR.CommonViews;component/Assets/Images/edit-icon.png" />
                                                                </Button.Content>
                                                            </Button>
                                                            <Button
                                                                HorizontalAlignment="Center"
                                                                VerticalAlignment="Center"
                                                                cal:Message.Attach="[Event Click]=[Action hplDeleteDiseaseProgression_Click($datacontext)]"
                                                                Style="{StaticResource MainFrame.HyperlinkButton.01}"
                                                                ToolTipService.ToolTip="{Binding G2617_G1_Xoa, Source={StaticResource eHCMSResources}}">
                                                                <Button.Content>
                                                                    <Image
                                                                        Width="13"
                                                                        Height="13"
                                                                        Opacity="1"
                                                                        Source="/aEMR.CommonViews;component/Assets/Images/Delete.png" />
                                                                </Button.Content>
                                                            </Button>
                                                        </StackPanel>
                                                    </DataTemplate>
                                                </DataGridTemplateColumn.CellTemplate>
                                            </DataGridTemplateColumn>
                                            <DataGridTextColumn
                                                x:Name="col0"
                                                Binding="{Binding DiseaseProgressionName}"
                                                Header="Tên diễn tiến bệnh" />
                                            <DataGridCheckBoxColumn Binding="{Binding UseForWebsite}" Header="Dùng cho Website" />
                                        </DataGrid.Columns>
                                    </commonctrl:ReadOnlyDataGrid>
                                    <commonctrl:DataPager
                                        Grid.Row="1"
                                        VerticalAlignment="Bottom"
                                        PageSize="9"
                                        Source="{Binding ObjDiseaseProgression_Paging, Mode=TwoWay}" />
                                </Grid>
                            </StackPanel>
                        </Border>
                    </Grid>
                </xctk:BusyIndicator>
            </Grid>
        </TabItem>
        <TabItem x:Name="tabSuburbNamesItems" Header="Diễn tiến bệnh chi tiết">
            <Grid
                x:Name="LayoutSuburbNames"
                Margin="5"
                Background="White">
                <xctk:BusyIndicator BusyContent="{Binding DlgBusyContent}" IsBusy="{Binding DlgIsBusyFlag}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0">
                            <TextBlock
                                Margin="0,10,0,5"
                                HorizontalAlignment="Center"
                                FontSize="14"
                                FontWeight="Bold"
                                Foreground="#FF0084FF"
                                Text="Danh mục diễn tiến bệnh chi tiết" />
                        </Grid>
                        <StackPanel
                            Grid.Row="1"
                            Margin="0,5"
                            Orientation="Horizontal"
                            Visibility="{Binding hplAddNewVisible, Mode=TwoWay}">
                            <Button
                                Name="hplAddNewSuburbNames"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                cal:Message.Attach="[Event Click]=[Action hplAddNewSuburbNames_Click()]"
                                FontSize="12"
                                FontWeight="Bold"
                                Foreground="#FF0084FF"
                                Style="{StaticResource MainFrame.HyperlinkButton.01}"
                                Visibility="{Binding bhplAddNew, Converter={StaticResource BooleanToVisibility}}">
                                <Button.Content>
                                    <StackPanel Orientation="Horizontal">
                                        <Image
                                            Width="13"
                                            Height="13"
                                            Opacity="1"
                                            Source="/aEMR.CommonViews;component/Assets/Images/page-add-icon2.png" />
                                        <TextBlock Text="Tạo mới diễn tiến bệnh chi tiết" />
                                    </StackPanel>
                                </Button.Content>
                            </Button>
                            <Button
                                Name="BtnExportExcel"
                                Margin="20,0,0,0"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                cal:Message.Attach="[Event Click]=[Action BtnExportExcel()]"
                                FontSize="12"
                                FontWeight="Bold"
                                Foreground="#FF0084FF"
                                Style="{StaticResource MainFrame.HyperlinkButton}"
                                ToolTipService.ToolTip="{Binding G2849_G1_XuatExcel, Source={StaticResource eHCMSResources}}">
                                <Button.Content>
                                    <StackPanel Orientation="Horizontal">
                                        <Image
                                            Width="13"
                                            Height="13"
                                            Opacity="1"
                                            Source="/aEMR.CommonViews;component/Assets/Images/ArrowDownSave32x32.png" />
                                        <TextBlock Text="{Binding G2849_G1_XuatExcel, Source={StaticResource eHCMSResources}}" />
                                    </StackPanel>
                                </Button.Content>
                            </Button>
                        </StackPanel>
                        <Border
                            Grid.Row="2"
                            Margin="0,10,0,5"
                            Background="AliceBlue"
                            BorderBrush="#C1D2E6"
                            BorderThickness="1"
                            CornerRadius="3">
                            <StackPanel>
                                <Border
                                    Margin="10,-10,0,0"
                                    HorizontalAlignment="Left"
                                    Background="AliceBlue"
                                    BorderBrush="#6F8AA9"
                                    BorderThickness="1">
                                    <TextBlock
                                        Margin="10,0,10,0"
                                        FontWeight="Bold"
                                        Text="{Binding G1174_G1_TimKiem, Source={StaticResource eHCMSResources}}" />
                                </Border>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="120" />
                                        <ColumnDefinition />
                                    </Grid.ColumnDefinitions>
                                    <Label
                                        Grid.Row="0"
                                        Grid.Column="0"
                                        Margin="0,2,5,2"
                                        HorizontalAlignment="Right"
                                        Content="Diễn tiến bệnh"
                                        FontWeight="Normal" />
                                    <commonctrl:AxComboBox
                                        x:Name="cboDiseaseProgression"
                                        Grid.Row="0"
                                        Grid.Column="1"
                                        Width="400"
                                        Margin="0,2,5,2"
                                        HorizontalAlignment="Left"
                                        cal:Message.Attach="[Event SelectionChanged]=[Action cboDiseaseProgressionSelectedItemChanged($this.SelectedItem)]"
                                        DisplayMemberPath="DiseaseProgressionNameWithUFW"
                                        FontWeight="Normal"
                                        Foreground="Black"
                                        ItemsSource="{Binding DiseaseProgression, Mode=OneWay}"
                                        SelectedValueEx="{Binding DiseaseProgressionID, Mode=TwoWay}"
                                        SelectedValuePath="DiseaseProgressionID" />
                                    <Label
                                        Grid.Row="1"
                                        Grid.Column="0"
                                        Margin="0,2,5,2"
                                        HorizontalAlignment="Right"
                                        Content="Tên chi tiết"
                                        FontWeight="Normal" />
                                    <TextBox
                                        x:Name="tbSearchSuburbNames"
                                        Grid.Row="1"
                                        Grid.Column="1"
                                        Width="400"
                                        Margin="0,2,5,2"
                                        HorizontalAlignment="Left"
                                        Text="{Binding SearchDiseaseProgressionDetails, Mode=TwoWay}" />

                                    <Button
                                        x:Name="btSearchSuburbNames"
                                        Grid.Row="2"
                                        Grid.Column="1"
                                        Width="60"
                                        Margin="0,0,5,5"
                                        HorizontalAlignment="Left"
                                        Visibility="{Binding bbtSearch, Converter={StaticResource BooleanToVisibility}}">
                                        <StackPanel Orientation="Horizontal">
                                            <Image
                                                Width="20"
                                                Height="18"
                                                VerticalAlignment="Center"
                                                Source="/aEMR.CommonViews;component/Assets/Images/1306555029_find.png" />
                                            <TextBlock VerticalAlignment="Center" Text="{Binding G0981_G1_Tim, Source={StaticResource eHCMSResources}}" />
                                        </StackPanel>
                                    </Button>
                                </Grid>
                            </StackPanel>
                        </Border>
                        <Border
                            Grid.Row="3"
                            Margin="0,10,0,5"
                            Background="AliceBlue"
                            BorderBrush="#C1D2E6"
                            BorderThickness="1"
                            CornerRadius="3">
                            <StackPanel>
                                <Border
                                    Margin="10,-10,0,0"
                                    HorizontalAlignment="Left"
                                    Background="AliceBlue"
                                    BorderBrush="#6F8AA9"
                                    BorderThickness="1">
                                    <TextBlock
                                        Margin="10,0,10,0"
                                        FontWeight="Bold"
                                        Text="Danh sách chi tiết" />
                                </Border>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition />
                                        <RowDefinition Height="25" />
                                    </Grid.RowDefinitions>
                                    <commonctrl:ReadOnlyDataGrid
                                        Name="dtgListSuburbNames"
                                        Grid.Row="0"
                                        Margin="0,2"
                                        AutoGenerateColumns="False"
                                        CanUserAddRows="False"
                                        ColumnHeaderStyle="{StaticResource MainFrame.DataGridColumnHeaderStyle}"
                                        HeadersVisibility="All"
                                        HorizontalScrollBarVisibility="Auto"
                                        IsReadOnly="True"
                                        ItemsSource="{Binding ObjDiseaseProgressionDetails_Paging, Mode=TwoWay}"
                                        Style="{StaticResource MainFrame.DataGridStyle}"
                                        VerticalScrollBarVisibility="Visible">
                                        <DataGrid.Columns>
                                            <DataGridTemplateColumn x:Name="colTemplateSuburbNames" Header="">
                                                <DataGridTemplateColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <StackPanel Orientation="Horizontal">
                                                            <Button
                                                                x:Name="hplEditSuburbNames"
                                                                HorizontalAlignment="Center"
                                                                VerticalAlignment="Center"
                                                                cal:Message.Attach="[Event Click]=[Action hplEditSuburbNames_Click($datacontext)]                                                              ;[Event Loaded]=[Action hplEdit_Loaded($source)]"
                                                                Style="{StaticResource MainFrame.HyperlinkButton.01}"
                                                                ToolTipService.ToolTip="{Binding T1484_G1_HChinh, Source={StaticResource eHCMSResources}}">
                                                                <Button.Content>
                                                                    <Image
                                                                        Width="15"
                                                                        Height="15"
                                                                        Opacity="1"
                                                                        Source="/aEMR.CommonViews;component/Assets/Images/edit-icon.png" />
                                                                </Button.Content>
                                                            </Button>
                                                            <Button
                                                                HorizontalAlignment="Center"
                                                                VerticalAlignment="Center"
                                                                cal:Message.Attach="[Event Click]=[Action hplDeleteDiseaseProgressionDetail_Click($datacontext)]"
                                                                Style="{StaticResource MainFrame.HyperlinkButton.01}"
                                                                ToolTipService.ToolTip="{Binding G2617_G1_Xoa, Source={StaticResource eHCMSResources}}">
                                                                <Button.Content>
                                                                    <Image
                                                                        Width="13"
                                                                        Height="13"
                                                                        Opacity="1"
                                                                        Source="/aEMR.CommonViews;component/Assets/Images/Delete.png" />
                                                                </Button.Content>
                                                            </Button>
                                                        </StackPanel>
                                                    </DataTemplate>
                                                </DataGridTemplateColumn.CellTemplate>
                                            </DataGridTemplateColumn>
                                            <DataGridTextColumn
                                                x:Name="col3"
                                                Binding="{Binding DiseaseProgressionDetailName}"
                                                Header="Tên chi tiết" />
                                            <!--<DataGridCheckBoxColumn
                                                x:Name="col4"
                                                Binding="{Binding UseForWebsite, TargetNullValue=False}"
                                                Header="Dùng cho Web" />
                                            <DataGridCheckBoxColumn
                                                x:Name="col5"
                                                Binding="{Binding UseForWebsite, Converter={StaticResource InverseBoolConverter}}"
                                                Header="Dùng cho His" />-->
                                        </DataGrid.Columns>
                                    </commonctrl:ReadOnlyDataGrid>
                                    <commonctrl:DataPager
                                        Grid.Row="1"
                                        VerticalAlignment="Bottom"
                                        PageSize="10"
                                        Source="{Binding ObjDiseaseProgressionDetails_Paging, Mode=TwoWay}" />
                                </Grid>
                            </StackPanel>
                        </Border>
                    </Grid>
                </xctk:BusyIndicator>
            </Grid>
        </TabItem>
    </TabControl>
</UserControl>