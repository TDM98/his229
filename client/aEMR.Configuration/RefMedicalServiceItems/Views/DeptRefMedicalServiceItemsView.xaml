                                                                <DataGridTemplateColumn.CellTemplate>
                                                                    <DataTemplate>
                                                                        <TextBlock VerticalAlignment="Center" HorizontalAlignment="Right" Text="{Binding HIAllowedPrice,StringFormat=N0}"></TextBlock>
