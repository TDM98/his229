                                         Style="{StaticResource ItemHyperlinkLeftMenu}"/>

                        <Button Content="{Binding K1697_G1_CHinhCLSNgVien, Source={StaticResource eHCMSResources}}" Name="PCLAgency_Mgnt" Margin="5,2,0,2"
