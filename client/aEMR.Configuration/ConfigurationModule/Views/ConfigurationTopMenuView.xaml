                <MenuItem
                    Background="Aquamarine"
                    Foreground="DarkBlue"
                    Header="{Binding Z3112_G1_DM_BV, Source={StaticResource eHCMSResources}}"
                    Visibility="{Binding bDM_BV_Mgnt, Converter={StaticResource BooleanToVisibility}, Mode=TwoWay}">
