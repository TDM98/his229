                    x:Name="RefDepartmentReqCashAdv_Mgnt"
                    Background="Aquamarine"
                    Foreground="DarkBlue"
                    Header="{Binding T1143_G1_GiaTUTungKhoa, Source={StaticResource eHCMSResources}}"
