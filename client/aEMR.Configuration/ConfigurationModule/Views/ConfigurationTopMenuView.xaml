                        x:Name="ICD_Mgnt"
                        Background="Aquamarine"
                        Foreground="DarkBlue"
                        Header="{Binding Z3101_G1_DM_ICD, Source={StaticResource eHCMSResources}}"
                        Visibility="{Binding bICD_Mgnt, Converter={StaticResource BooleanToVisibility}, Mode=TwoWay}" />
