                    Background="Aquamarine"
                    Foreground="DarkBlue"
                    Header="{Binding Z3111_G1_DM_BYT, Source={StaticResource eHCMSResources}}"
                    Visibility="{Binding bDM_BYT_Mgnt, Converter={StaticResource BooleanToVisibility}, Mode=TwoWay}">
