                        FontWeight="ExtraBold"
                        Foreground="DarkBlue"
                        Header="Danh mục nhóm bệnh"
                        Visibility="{Binding bDM_BV_Mgnt, Converter={StaticResource BooleanToVisibility}}" />
                    <MenuItem
                        x:Name="PrescriptionMaxHIPay_Mgnt"
