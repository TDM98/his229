                                    <TextBlock Text="{Binding P0369_G1_PhDNThanhToan, StringFormat='{}{0}:', Source={StaticResource eHCMSResources}}" Grid.Row="3" HorizontalAlignment="Right" Style="{StaticResource TextBlock.Heading.04}" />
