                                                        SelectedItemEx="{Binding CurrentPatient.GenderObj, Mode=TwoWay, NotifyOnValidationError=True}"
                                                        SelectedValuePath="ID"
                                                        Style="{StaticResource MainFrame.ComboBox}"
                                                        TabIndex="4" />
                                                    <TextBlock
                                                        Grid.Row="3"
                                                        Grid.Column="2"
                                                        Margin="0"
                                                        VerticalAlignment="Center"
                                                        Style="{StaticResource TBlock.Heading.03.RedAsterisk}"
                                                        Text="{Binding Z0045_G1_DauSao, Source={StaticResource eHCMSResources}}" />

                                                    <TextBlock
                                                        Grid.Row="3"
                                                        Grid.Column="4"
                                                        Margin="0"
                                                        VerticalAlignment="Center"
                                                        Style="{StaticResource TextBlock.Heading.04}"
                                                        Text="{Binding T1703_G1_HonNhan, Source={StaticResource eHCMSResources}}"
                                                        TextWrapping="Wrap" />
                                                    <customcontrols:KeyEnabledComboBox
                                                        x:Name="cboMaritalStatus"
                                                        Grid.Row="3"
                                                        Grid.Column="5"
                                                        Height="22"
                                                        VerticalAlignment="Center"
                                                        DisplayMemberPath="ObjectValue"
                                                        IsEnabled="{Binding Path=FormState, ConverterParameter=NEW|EDIT, Mode=OneWay, Converter={StaticResource EnumConverterObj}}"
                                                        ItemsSource="{Binding MaritalStatusList}"
                                                        SelectedValueEx="{Binding CurrentPatient.V_MaritalStatus, Mode=TwoWay}"
                                                        SelectedValuePath="LookupID"
                                                        Style="{StaticResource MainFrame.ComboBox}"
                                                        TabIndex="5" />



                                                    <TextBlock
                                                        Grid.Row="5"
                                                        Grid.Column="0"
                                                        Margin="0"
                                                        VerticalAlignment="Center"
                                                        Style="{StaticResource TextBlock.Heading.04}"
                                                        Text="{Binding N0262_G1_NoiLamViec, Source={StaticResource eHCMSResources}}"
                                                        TextWrapping="Wrap" />
                                                    <TextBox
                                                        x:Name="txtEmployee"
                                                        Grid.Row="5"
                                                        Grid.Column="1"
                                                        Grid.ColumnSpan="5"
                                                        Height="22"
                                                        VerticalAlignment="Center"
                                                        IsReadOnly="{Binding FormState, ConverterParameter=NONE|READONLY, Converter={StaticResource EnumConverterObj}, Mode=OneWay}"
                                                        Style="{StaticResource MainFrame.TextBox}"
                                                        TabIndex="7"
                                                        Text="{Binding CurrentPatient.PatientEmployer, Mode=TwoWay}" />



                                                    <TextBlock
                                                        Grid.Row="4"
                                                        Grid.Column="0"
                                                        Margin="0"
                                                        VerticalAlignment="Center"
                                                        Style="{StaticResource TextBlock.Heading.04}"
                                                        Text="{Binding N0136_G1_NgheNghiep, Source={StaticResource eHCMSResources}}"
                                                        TextWrapping="Wrap" />

                                                    <TextBox
                                                        x:Name="txtOccupation"
                                                        Grid.Row="4"
                                                        Grid.Column="1"
                                                        Grid.ColumnSpan="5"
                                                        Height="22"
                                                        VerticalAlignment="Center"
                                                        IsReadOnly="{Binding FormState, ConverterParameter=NONE|READONLY, Converter={StaticResource EnumConverterObj}, Mode=OneWay}"
                                                        Style="{StaticResource MainFrame.TextBox}"
                                                        TabIndex="6"
                                                        Text="{Binding CurrentPatient.PatientOccupation, Mode=TwoWay}" />

                                                    <TextBlock
                                                        Grid.Row="6"
                                                        Grid.Column="0"
                                                        Margin="0,0,3,0"
                                                        VerticalAlignment="Center"
                                                        Style="{StaticResource TextBlock.Heading.04}"
                                                        Text="{Binding K2840_G1_DanToc, Source={StaticResource eHCMSResources}}"
                                                        TextWrapping="Wrap" />
                                                    <customcontrols:KeyEnabledComboBox
                                                        x:Name="cboEthnic"
                                                        Grid.Row="6"
                                                        Grid.Column="1"
                                                        Height="22"
                                                        VerticalAlignment="Center"
                                                        DisplayMemberPath="ObjectValue"
                                                        IsEnabled="{Binding FormState, ConverterParameter=NEW|EDIT, Converter={StaticResource EnumConverterObj}, Mode=OneWay}"
                                                        ItemsSource="{Binding EthnicsList}"
                                                        SelectedValueEx="{Binding CurrentPatient.V_Ethnic, Mode=TwoWay}"
                                                        SelectedValuePath="LookupID"
                                                        Style="{StaticResource MainFrame.ComboBox}"
                                                        TabIndex="8" />
                                                    <TextBlock
                                                        Grid.Row="6"
                                                        Grid.Column="4"
                                                        Margin="0,0,9,0"
                                                        VerticalAlignment="Center"
                                                        Style="{StaticResource TextBlock.Heading.04}"
                                                        Text="{Binding S0627_G1_SoCMND, Source={StaticResource eHCMSResources}}"
                                                        TextWrapping="Wrap" />
                                                    <TextBox
                                                        x:Name="txtIDCard"
                                                        Grid.Row="6"
                                                        Grid.Column="5"
                                                        Height="22"
                                                        VerticalAlignment="Center"
                                                        IsReadOnly="{Binding FormState, ConverterParameter=NONE|READONLY, Converter={StaticResource EnumConverterObj}, Mode=OneWay}"
                                                        Style="{StaticResource MainFrame.TextBox}"
                                                        TabIndex="9"
                                                        Text="{Binding CurrentPatient.IDNumber, Mode=TwoWay}" />

                                                </Grid>
                                            </StackPanel>

                                        </Border>

