                                                  Binding="{Binding RemCode}" ElementStyle="{StaticResource MainFrame.TextBlockCenterAlign}"/>

                                        <DataGridTextColumn Header="{Binding N0111_G1_NgTao, Source={StaticResource eHCMSResources}}"
