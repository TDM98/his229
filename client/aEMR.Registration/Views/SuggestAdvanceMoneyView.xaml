                                        <TextBlock Text="{Binding T0723_G1_GChu, StringFormat='{}{0}:', Source={StaticResource eHCMSResources}}" Grid.Row="2" HorizontalAlignment="Right" Style="{StaticResource TextBlock.Heading.04}"/>
