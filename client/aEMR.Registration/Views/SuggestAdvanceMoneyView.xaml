                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,10">
                    <TextBlock Text="{Binding DeptLocTitle}" Foreground="Red"
                HorizontalAlignment="Center" VerticalAlignment="Center" 
