                                            <TextBlock Text="{Binding S0701_G1_SoTienDeNghiUng, StringFormat='{}{0}:', Source={StaticResource eHCMSResources}}" HorizontalAlignment="Right" Style="{StaticResource TextBlock.Heading.04}" Grid.Row="2" />
