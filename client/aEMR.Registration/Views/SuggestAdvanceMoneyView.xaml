                                            <TextBox Grid.Column="1" Grid.Row="5"
                                                    Margin="0,1" AcceptsReturn="True" Grid.RowSpan="2" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto"
                                                     Style="{StaticResource MainFrame.TextBox}" Text="{Binding CurRptPatientCashAdvReminder.RemNote,Mode=TwoWay}" />
