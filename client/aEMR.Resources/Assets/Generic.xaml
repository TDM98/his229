                    mc:Ignorable="d">
    
    <Thickness x:Key="PagingControlItemMargin">4,0,0,0</Thickness>
    <Thickness x:Key="PagingControlItemMarginNormal">10,0,0,0</Thickness>

    <Geometry x:Key="LeftArrowGeometry">M 6.5 0 L 0 6.5 6.5 13 Z</Geometry>
    <Geometry x:Key="RightArrowGeometry">M 0 13 L 6.5 6 L 0 0 Z</Geometry>
    <Geometry x:Key="DownArrowGeometry">M 0 0 L 6.5 6.5 L 13 0 Z</Geometry>
    <Geometry x:Key="AdditionGeometry">M0,5 H10 M5,5 V10Z</Geometry>
    <Geometry x:Key="MinusGeometry">M0,5 H10</Geometry>

    <SolidColorBrush x:Key="ButtonProgressArrowBrush" Color="#FFA510BB"/>
    <LinearGradientBrush x:Key="ButtonProgressNormalBackgroundBrush" EndPoint="0.5,1" StartPoint="0.5,0">
        <GradientStop Color="#FFF4F2F3" Offset="0"/>
        <GradientStop Color="#FFD5D5D5" Offset="1"/>
    </LinearGradientBrush>

    <SolidColorBrush x:Key="LabelNormalBrush" Color="#FF000000" />

    <SolidColorBrush x:Key="ButtonProgressDisabledBackgroundBrush" Color="#FFDCDCDC"/>
    <LinearGradientBrush x:Key="ButtonProgressPressedBackgroundBrush" EndPoint="0.5,1" StartPoint="0.5,0">
        <GradientStop Color="#FFFFFFFF" Offset="0"/>
        <GradientStop Color="#FF999999" Offset="1"/>
    </LinearGradientBrush>
    <SolidColorBrush x:Key="ButtonDefaultFocusBorderBrush" Color="#FF0EA003" />
    <SolidColorBrush x:Key="ButtonDefaultDisabledForegroundBrush" Color="#FFFFFFFF" />
    <SolidColorBrush x:Key="ButtonDefaultPressedForegroundBrush" Color="#FFFFFFFF" />
    <!--  Focus Style  -->
    <Style x:Key="ButtonFocusDefaultVisual">
        <Setter Property="Control.Template">
            <Setter.Value>
                <ControlTemplate>
                    <Border x:Name="border"
                            BorderBrush="{StaticResource ButtonDefaultFocusBorderBrush}"
                            BorderThickness="2"
                            CornerRadius="3"
                            Padding="12,0"
                            RenderTransformOrigin="0.5,0.5" />
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <!--  Focus Decision Style  -->
    <Style x:Key="ButtonFocusDecisionAdditionMinusVisual">
