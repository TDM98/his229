                                  Width="10"
                                  Height="10"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center"
                                  Data="{StaticResource AdditionGeometry}"
                                  Stroke="{DynamicResource ButtonAdditionOrMinusGeometryBrush}"
                                  StrokeThickness="2" />
                            <ContentPresenter x:Name="contentPresenter"
                                              HorizontalAlignment="Center"
