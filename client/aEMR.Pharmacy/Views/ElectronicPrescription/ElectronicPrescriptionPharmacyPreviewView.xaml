            Height="Auto"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Top"
            cal:Message.Attach="[Event LoadingRow] = [Action grd_LoadingRow($source, $eventArgs)]"
            AutoGenerateColumns="False"
            CanUserAddRows="False"
